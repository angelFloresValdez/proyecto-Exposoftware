@model List<JefeModel>
@{
    Layout = null; // Para no mostrar ningún layout principal
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Jefes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos de personalización */
        body {
            font-family: Arial, sans-serif;
            background-color: #5D89B3;
            color: #000000;
            /* Color del texto */
        }

        .container {
            margin-top: 30px;
        }

        .card {
            border: none;
            background-color: #fff;
            /* Fondo azul */
            color: #000;
            /* Color del texto */
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #ced4da;
            border-bottom: none;
            color: #000000;
            /* Color del texto */
            font-weight: bold;
            border-radius: 10px 10px 0 0;
        }

        .card-body {
            padding: 30px;
        }

        .form-control {
            border-radius: 4px;
            border: 1px solid #ced4da;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
            border-radius: 4px;
        }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-4"><i><b>LISTA DE JEFES</b></i></h1>
            <a asp-controller="Encargado" asp-action="JefesAdd" class="btn btn-primary mb-3">Agregar JEFE</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Acciones</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Departamento</th>
                        <th scope="col">Sueldo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var jefe in Model) // Itera sobre cada jefe en el modelo

                    {
                        <tr>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-outline-primary" asp-controller="Encargado" asp-action="JefesEdit"
                                        asp-route-Id="@jefe.Id">Editar</a>
                                    <span class="mx-1"></span>
                                    <a class="btn btn-outline-danger" asp-controller="Encargado"
                                        asp-action="JefeShowToDelete" asp-route-Id="@jefe.Id">Borrar</a>
                                </div>
                            </td>
                            <td>@jefe.NombreJefe</td> <!-- Muestra el nombre del jefe -->
                            <td>@jefe.Departamento</td> <!-- Muestra el departamento del jefe -->
                            <td>@String.Format("{0:C}", jefe.Sueldo)</td> <!-- Muestra el sueldo como moneda mexicana -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Proporciona estilos de CSS y componentes interactivos -->

</body>

</html>
