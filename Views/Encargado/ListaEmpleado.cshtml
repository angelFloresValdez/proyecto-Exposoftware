@model List<RegEmpleadoModel> //se define el modelo de la vista cono una lista

@{
    Layout = null;
    <!-- para no mostrar ningún layout principal -->
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lista de Empleados</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados para la vista */
        body {
            font-family: Arial, sans-serif;
            background-color: #5D89B3;
            color: #000000;
            /* Color del texto */
        }

        .container {
            margin-top: 30px;

        }

        .card {
            border: none;
            background-color: #fff;
            /* Fondo blanco */
            color: #000;
            /* Color del texto */
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #ced4da;
            border-bottom: none;
            color: #000000;
            /* Color del texto */
            font-weight: bold;
            border-radius: 10px 10px 0 0;
        }

        .card-body {
            padding: 20px;
        }

        .btn-group {
            display: flex;
        }

        .btn-group .btn {
            margin-right: 10px;
        }

        .table {
            width: 100%;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .table thead th {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .btn-outline-primary {
            color: #007bff;
            border-color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
            color: #fff;
        }

        .btn-outline-danger {
            color: #dc3545;
            border-color: #dc3545;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Lista de Empleados</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <!-- Campos que aparecen en la tabla -->
                                <th scope="col">Acciones</th>
                                <th scope="col">Nombre Completo</th>
                                <th scope="col">Fecha de Entrada</th>
                                <th scope="col">Fecha de Nacimiento</th>
                                <th scope="col">Nacionalidad</th>
                                <th scope="col">Estado Civil</th>
                                <th scope="col">CURP</th>
                                <th scope="col">RFC</th>
                                <th scope="col">Domicilio</th>
                                <th scope="col">Turno</th>
                                <th scope="col">Jefe</th>
                                <th scope="col">Departamento</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var empleado in Model)// Itera sobre cada empleado en el modelo

                            {
                                <tr>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-outline-primary" asp-controller="Encargado"
                                                asp-action="EmpleadoEdit" asp-route-Id="@empleado.Id">Editar</a>
                                            <!-- Enlace al botón de editar -->
                                            <a class="btn btn-outline-danger" asp-controller="Encargado"
                                                asp-action="EmpleadoShowToDelete" asp-route-Id="@empleado.Id">Borrar</a>
                                            <!-- Enlace al botón de borrar -->
                                        </div>
                                    </td>
                                    <!-- Muestra la información del empleado -->
                                    <td>@empleado.NombreCompleto</td>
                                    <td>@empleado.FechaEntrada.ToShortDateString()</td>
                                    <td>@empleado.FechaNac.ToShortDateString()</td>
                                    <td>@empleado.Nacionalidad</td>
                                    <td>@empleado.EstadoCivil</td>
                                    <td>@empleado.Curp</td>
                                    <td>@empleado.Rfc</td>
                                    <td>@empleado.Domicilio</td>
                                    <td>@empleado.Turno</td>
                                    <td>@empleado.Jefe</td>
                                    <td>@empleado.Departamento</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>