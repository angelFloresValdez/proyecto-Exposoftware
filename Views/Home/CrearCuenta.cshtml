@model LoginEncargadoModel

@{
    ViewData["Title"] = "Registro";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <style>
        /* Estilos personalizados para la vista */
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
        }

        .navbar {
            background-color: #ffffff;
            padding: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar a {
            text-decoration: none;
            color: #000;
            padding: 10px;
            font-size: 16px;
        }

        .navbar a:hover {
            background-color: #ddd;
        }

        .navbar .logo {
            float: left;
            padding-right: 20px;
        }

        .navbar .menu {
            float: right;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 60px);
            /* Ajusta la altura restando el tamaño del navbar */
            margin-top: 20px;
            /* Reducido el margen superior */
        }

        .form-container {
            display: flex;
            width: 80%;
            max-width: 1200px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .left {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #ffffff;
        }

        .right {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: #3b82f6;
            color: white;
            padding: 40px;
        }

        .right h1 {
            margin-bottom: 30px;
            font-size: 2.5em;
        }

        .right form {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 400px;
        }

        .right input {
            margin-bottom: 20px;
            padding: 15px;
            border: none;
            border-radius: 5px;
            font-size: 1.1em;
        }

        .right button {
            padding: 15px;
            border: none;
            border-radius: 5px;
            background-color: #ffffff;
            color: #3b82f6;
            cursor: pointer;
            font-size: 1.1em;
        }

        .right a {
            color: #ffffff;
            text-decoration: none;
            margin-top: 20px;
            font-size: 1em;
        }

        .right a:hover {
            text-decoration: underline;
        }

        .illustration {
            width: 80%;
            height: auto;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="form-container">
            <div class="left">
                <!-- Imagen ilustrativa para la sección -->
                <img src="~/img/Registro.png" alt="Calendar" class="img-fluid mt-4">
            </div>
            <div class="right">
                <h1>Registro</h1>
                <!-- Formulario de registro que se envía al controlador Home y acción CrearCuenta -->
                <form asp-controller="Home" asp-action="CrearCuenta" method="post">
                    <input asp-for="CorreoEnc" placeholder="Email" required />
                    <input asp-for="ContraseñaEnc" type="password" placeholder="Contraseña" required />
                    <button type="submit" class="btn btn-outline-primary me-2">Registrar</button>
                </form>
                <!-- Enlace para redirigir a la página de inicio de sesión -->
                <a href="/Home/IniciarSesion">¿Ya tienes cuenta? Inicia sesión aquí.</a>
            </div>
        </div>
    </div>
</body>

</html>
